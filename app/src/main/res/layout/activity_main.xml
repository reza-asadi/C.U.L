<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="test.com.cul.cul.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="Correction of uppercase and lowercase letters"
            android:textSize="16sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/presence_offline"
                android:id="@+id/imageView"
                android:layout_weight="0.2"
                android:layout_width="0dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtInput"
                android:layout_weight="1"
                android:hint="Enter your text here" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dip"
                app:srcCompat="@android:drawable/presence_online"
                android:id="@+id/imageView2"
                android:layout_weight="0.2"
                android:layout_height="36dp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:id="@+id/txtvOutput"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:text="Correct it!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCurrectit" />
    </LinearLayout>

</RelativeLayout>
